<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>SQLiteConnectionBuddy</PackageId>
    <Version>5.0.1</Version>
    <Title>SQLiteConnectionBuddy</Title>
    <Authors>dmanning23</Authors>
    <description>Simplify opening SQLite databases for cross-platform .Net projects</description>
    <PackageProjectUrl>https://github.com/dmanning23/SQLiteConnectionBuddy</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/dmanning23/SQLiteConnectionBuddy</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>monogame</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.*">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="sqlite-net-pcl" Version="1.9.*"/>
  </ItemGroup>
</Project>